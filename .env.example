# Wearable Agent Framework — Environment Configuration
# Copy this file to .env and fill in the values.

# ── LLM Provider ──────────────────────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# ── Fitbit OAuth2 (https://dev.fitbit.com/apps) ──────────────
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=
FITBIT_REDIRECT_URI=http://localhost:8000/auth/fitbit/callback

# ── Database ──────────────────────────────────────────────────
# SQLite (default for development):
DATABASE_URL=sqlite+aiosqlite:///./data/wearable_agent.db
# PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/wearable_agent

# ── Server ────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change-me-to-a-random-secret

# ── Notifications ─────────────────────────────────────────────
WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL_FROM=

# ── Agent ─────────────────────────────────────────────────────
AGENT_CHECK_INTERVAL_SECONDS=300
AGENT_LOG_LEVEL=INFO

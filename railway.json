{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -e . && python scripts/fetch_lfs.py"
  },
  "deploy": {
    "startCommand": "python -m wearable_agent.main serve --host 0.0.0.0",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
